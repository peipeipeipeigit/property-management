<div class="mb-3">
  <a href="/todos/new" class="btn btn-warning me-3">新增房產單位</a>
  {{#if user.isAdmin }}
  <form action="/units/delete" method="GET" style="display: inline;">
    <button class="btn btn-danger" type="submit">刪除房產單位</button>
  </form>
  {{/if}}
</div>
<table class="table">
  <thead class="table-dark">
    <tr class="table-secondary">
      <th scope="col">地點</th>
      <th scope="col">
        <p class="m-0">租約訖日</p>
        <p class="m-0">(YYYY/MM/DD)</p>
      </th>
      <th scope="col">服務仲介</th>
      <th scope="col">狀態</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each units}}
    <tr>
      <td scope="col">{{ this.address }}</td>
      <td scope="col">{{ formatDate this.endDate }}</td>
      <td scope="col">{{ this.Agency.name }}</td>
      <td scope="col">{{#if this.status }}已出租{{else}}未出租{{/if}}</td>
      <td scope="col">
        <a class="btn btn-outline-warning" href="./units/{{ this.id }}">detail</a>
        <a class="btn btn-outline-warning" href="./units/{{ this.id }}/edit">edit</a>
      </td>  
    </tr>
    {{/each}}
  </tbody>
</table>