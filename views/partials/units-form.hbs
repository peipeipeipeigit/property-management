<table class="table">
  <tr class="row mx-1">
    <th class="col-1 text-end text-end">
      <label class="form-label mt-2 mt-2" for="address">縣市</label>
    </th>
    <th class="col-3">
      <input class="form-control" type="text" name="city" id="city" placeholder="Enter city" value="{{unit.city}}"
        required>
    </th>
    <th class="col-1 text-end">
      <label class="form-label mt-2" for="address">地址</label>
    </th>
    <th class="col-3">
      <input class="form-control" type="text" name="address" id="address" placeholder="Enter address"
        value="{{unit.address}}" required>
    </th>
    <th class="col-4"></th>
  </tr>
  <tr class="row mx-1">
    <th class="col-1 text-end">
      <label class="form-label mt-2" for="income">單月租金</label>
      </div>
    <th class="col-3 text-end">
      <input class="form-control" type="text" name="income" id="income" placeholder="Enter amount"
        value="{{unit.income}}" required>
    </th>
    <th class="col-1 text-end">
      <label class="form-label mt-2" for="annualIncome">整年租金</label>
    </th>
    <th class="col-3">
      <input class="form-control" type="text" name="annualIncome" id="annualIncome" placeholder="Automatic calculation"
        value="{{unit.annualIncome}}" required>
    </th>
    <th class="col-4"></th>
  </tr>
  <tr class="row mx-1">
    <th class="col-1 text-end">
      <label class="form-label mt-2" for="startDate">租約起日</label>
    </th>
    <th class="col-3">
      <input class="form-control" type="date" name="startDate" id="startDate" value="{{formatDate unit.startDate}}">
    </th>
    <th class="col-1 text-end">
      <label class="form-label mt-2" for="endDate">租約訖日</label>
    </th>
    <th class="col-3">
      <input class="form-control" type="date" name="endDate" id="endDate" value="{{formatDate unit.endDate}}">
    </th>
    <th class="col-1 text-end">
      <label class="form-label mt-2" for="status"> 已出租 </label>
    </th>
    <th class="col-3 d-flex align-items-center">
      <input class="form-check-input" type="checkbox" name="status" id="status" {{#if statusTrue}}checked{{/if}}>
      <span class="ps-3 fw-normal">(已出租請勾選)</span>
    </th>
  </tr>
  <tr class="row mx-1">
    <th class="col-1 text-end">
      <label class="form-label mt-2" for="agencyName">服務仲介</label>
    </th>
    <th class="col-3">
      <select class="form-select" aria-label="Agency selector" id="agencyId" name="agencyId">
        {{#if unit.Agency}}
        <option value="{{unit.Agency.id}}" selected>{{unit.Agency.name}}</option>
        {{#each theRestAgencies}}
        <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
        {{else}}
        <option selected>選擇仲介</option>
        {{#each Agencies}}
        <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
        {{/if}}
      </select>
    </th>
    <th class="col-1 text-end">
      <label class="form-label mt-2" for="agencyCompany">仲介公司</label>
    </th>
    <th class="col-3">
      <input class="form-control" type="text" name="agencyCompany" id="agencyCompany" value="{{unit.Agency.company}}">
    </th>
    <th class="col-1 text-end">
      <label class="form-label mt-2" for="address">仲介電話</label>
    </th>
    <th class="col-3">
      <input class="form-control" type="tel" name="agencyPhoneNumber" id="agencyPhoneNumber"
        value="{{unit.Agency.phoneNumber}}">
    </th>
  </tr>
  <tr class="row mx-1">
    <th class="col-1 text-end"><label class="form-label mt-2" for="note">備註項目</label>
    </th>
    <th class="col-11">
      <input class="form-control" type="text" name="note" id="note" placeholder="Enter note" value="{{unit.note}}">
    </th>
  </tr>
</table>