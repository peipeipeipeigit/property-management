<div class="row mt-3">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-2">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{ email }}" >
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" value="{{ password }}">
        </div>
        <div class="d-flex align-items-center mb-4">
          <input class="me-1" type="checkbox" name="rememberUser">
          <p class="mb-0">記住我的資訊</p>
        </div>

        <button type="submit" class="d-block w-100 mb-2 btn btn-primary">Login</button>
        <a href="/auth/facebook" class="d-block w-100 mb-2 btn btn-info">Facebook</a>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>